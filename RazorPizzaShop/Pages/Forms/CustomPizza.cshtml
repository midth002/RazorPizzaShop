@page
@model RazorPizzaShop.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own Pizza!</h1>

    <form method="post" class="mx-auto my-5 px-5 py-5 rounded-5 bg-light col-4">

        
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name..." />
       
            <br />
         <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce">Tomato Sauce
            <br/>
         <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese">Cheese 
            <br/>
         <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni">Peperoni
            <br />
         <input type="checkbox" asp-for="Pizza.Sausage" placeholder="Mushrooms">Sausage
            <br/>
         <input type="checkbox" asp-for="Pizza.CanadianBacon" placeholder="Canadian Bacon">Canadian Bacon
            <br/>
         <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham">Ham
            <br/>
         <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef">Beef
            <br/>
         <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushrooms">Mushrooms
            <br/>
        <input type="checkbox" asp-for="Pizza.Olives" placeholder="Mushrooms">Olives
            <br/>
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple">Pineapple
            <br/>
        <input type="checkbox" asp-for="Pizza.GreenPeppers" placeholder="GreenPeppers">GreenPeppers
            <br/>

   

        <button class="btn btn-success mt-3" type="submit">Order My Pizza</button> 
    </form>
</div> 